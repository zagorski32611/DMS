<h1>Update your profile</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>


      <%= f.label :first_name %>
      <%= f.text_field :first_name, class: 'form-control', :required => true %>

      <%= f.label :last_name %>
      <%= f.text_field :last_name, class: 'form-control', :required => true %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control', :required => true %>

      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control', :required => true %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation, class: 'form-control' %>
      <br/>
      <p2> Employee Position: (Select only one): </p2>
      <br/>
      <%= radio_button_tag(:technician, "Technician") %>
        <%= label_tag(:technician, "Technician") %>
      <br/>
      <%= radio_button_tag(:role, "Advisor") %>
        <%= label_tag(:advisor, "Advisor") %>
      <br/>
      <%= radio_button_tag(:manager, "Manager") %>
        <%= label_tag(:manager, "Manager") %>
      <br/>
      <%= f.submit "Save changes", class: "btn btn-primary" %>
    <% end %>


  </div>
</div>
