<%= render 'layouts/header' %>

<h3><%= link_to "Add New Vehicle", new_vehicle_path %>&nbsp;</h3>


<h3>Search Vehicles </h3>
<%= form_tag(vehicles_path, method: :get) do %>
  <%= text_field_tag :term %>
  <%= submit_tag 'Search' %>
<% end %>

<table class="box">
<% unless @vehicles.nil? %>
  <% @vehicles.each do | veh | %>
  <tr>
    <td><%= veh.VIN %></td><br/>
    <td><%= veh.model %></td><br/>
    <td><%= veh.make %></td><br/>
    <td><%= veh.trim%>
    <td><%= veh.color %></td><br/>
    <td><%= veh.miles %></td><br/>

  <% end %>
<% end %>
</table>